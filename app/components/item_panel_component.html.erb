<div class="flex-1 flex flex-col">
  <div>
    <div class='w-32 mb-2 ml-2 float-right 2xl:w-40'>
      <img class="w-full h-auto rounded-md shadow-lg" src="<%= @item.image_url %>" alt="">
    </div>
    <div class='inline'>
      <div>
          <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium leading-5 bg-pink-100 text-pink-800"><%= @item.item_type_id %></span>
          in
          <% @item.topics.each do |topic| %>
            <a href='<%= link_to topic %>' class="flex-shrink-0 inline-block px-2 py-0.5 text-gray-800 text-xs leading-4 font-medium bg-gray-100 rounded-full"><%= topic.display_name %></a>
          <% end %>
      </div>
      <div>
        <%= render SplitButtonComponent.new(item: @item, user: @user, isopen: false) %>
        <a href="<%= item_path(@item) %>" class="">
          <span class="mt-4 text-xl leading-7 font-semibold text-gray-900">
            <%= @item.display_name %>
          </span>
        </a>
      </div>

      <p class="mt-3 text-base leading-6 text-gray-500">
        <%= @item.display_description %>
      </p>
    </div>
  </div>

</div>