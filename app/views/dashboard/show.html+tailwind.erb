<h3 class="text-lg leading-6 font-medium text-gray-900 mb-4 font-semibold">Reviews</h3>

<div class="grid gap-5 max-w-lg mx-auto lg:grid-cols-4 lg:max-w-none">
	  <% @following_reviews.each do |rev| %>
      <div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
        <div class="flex-shrink-0">
          <img class="h-48 w-full object-cover" src="<%= rev.item.new_thumbnail %>" alt="">
        </div>
        <div class="flex-1 bg-white p-6 flex flex-col justify-between">
          <div class="flex-1">
            <p class="text-sm leading-5 font-medium text-indigo-600">
              <a href="#" class="hover:underline">
                <%= rev.item.item_type_id %> in <%= rev.item.topics.first.display_name %>
              </a>
            </p>
            <a href="#" class="block">
              <h3 class="mt-2 text-xl leading-7 font-semibold text-gray-900">
                <%= rev.item.name %>
              </h3>
              <p class="mt-3 text-base leading-6 text-gray-500">
                <%= rev.notes.to_s + rev.item.description.to_s %>
              </p>
            </a>
          </div>
          <div class="mt-6 flex items-center">
            <div class="flex-shrink-0">
              <a href="#">
                <img class="h-10 w-10 rounded-full" src="<%= rev.user.avatar_image %>" alt="">
              </a>
            </div>
            <div class="ml-3">
              <p class="text-sm leading-5 font-medium text-gray-900">
                <a href="#" class="hover:underline">
                  <%= rev.user.nickname %>
                </a>
              </p>
              <div class="flex text-sm leading-5 text-gray-500">
                <time datetime="2020-03-16">
                  <%= rev.updated_at.strftime("%B %d, %Y") %>
                </time>
                <span class="mx-1">
                  Â·
                </span>
                <span>
                  <%= rev.status %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
