<div class="flex flex-no-wrap md:flex-wrap overflow-auto">
<% if @user_topics.any? %>
	<% @user_topics.map(&:topic).each do |topic| %>
	          <%= link_to topic, class: "block w-56 mr-4 mt-4 text-white shadow-lg rounded-lg overflow-hidden transition duration-200 transform hover:scale-105" do %>
			  	<img src="<%= topic.image_url %>" alt="avatar" class="w-full h-48 object-cover object-center">
				<div class="flex items-center px-6 py-3 bg-gray-900">
					<h1 class="mx-3 text-white font-semibold text-lg"><%= topic.display_name %></h1>
				</div>
			  <% end %>
	<% end %>
			<%= link_to Topic.find_by_name('machine-learning'), class:"block w-56 mr-4 mt-4 bg-white shadow-lg rounded-lg overflow-hidden transition duration-200 transform hover:scale-105" do %>
				<img src="https://images.unsplash.com/photo-1521185496955-15097b20c5fe?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=640&q=80" alt="avatar" class="w-full h-48 object-cover object-center">
				<div class="flex items-center px-6 py-3 bg-gray-900">
					<h1 class="mx-3 text-white font-semibold text-lg">Machine Learning for Managers</h1>
				</div>
			<% end %>
			<%= link_to Topic.find_by_name('programming-languages/scratch'), class:"block w-56 mr-4 mt-4 bg-white shadow-lg rounded-lg overflow-hidden transition duration-200 transform hover:scale-105" do %>
				<img src="https://images.unsplash.com/photo-1584697964190-7383cbee8277?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=640&q=80" alt="avatar" class="w-full h-48 object-cover object-center">
				<div class="flex items-center px-6 py-3 bg-gray-900">
					<h1 class="mx-3 text-white font-semibold text-lg">Scratch Programming for Kids</h1>
				</div>
			<% end %>

<% else %>
	        	<p>No such topics. <%= link_to "Browse topics", topics_path %> and follow your favorite ones.</p>
<% end %>
</div>

<div class="flex-grow">
     <div class="card">
        <div class="card-header d-md-flex align-items-center">
        	<h2><b>Latest Reviews</b></h2>
        </div>
        <div class="card-body">
        	<% if @following_reviews.any? %>
        		<div class="list-group list-lg-group list-group-flush">
	        	<% @following_reviews.each do |rev| %>
                    <%= render partial: 'components/review_card', locals: {rev: rev} %>
	        	<% end %>
	        	</div>
	        <% else %>
	        	<p>No reviews. <%= link_to "Consider following more users?", users_path, class: "underline text-blue-500" %> 
	        		<%# Review.recent.where("user_id NOT IN (?)", Array.wrap([current_user.id] + current_user.following.map(&:id))).includes(:user).map(&:user).uniq.each do |u| %>
	        			<%# link_to u.nickname, user_path(u) %>
	        		<%# end %>
	        	</p>
	        <% end %>
        </div>
</div>