<div class="row">
<div class="col-md-6 mb-4">
<div class="card">
                
                <div class="card-body">

<%= form_with(model: flash_card, local: true) do |form| %>
  <% if flash_card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(flash_card.errors.count, "error") %> prohibited this flash_card from being saved:</h2>

      <ul>
        <% flash_card.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-4">
    <%= form.label :question %><br/>
    <%= form.text_area :question, cols: 50, rows: 8 %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :answer %><br/>
    <%= form.text_area :answer, cols: 50, rows: 8 %>
  </div>

  <% if @flash_card.url.present? %>
  <div class="form-group mb-4">
    <%= form.label :url %><br/>
    <%= form.url_field :url %>
  </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>

</div>
</div>
</div>