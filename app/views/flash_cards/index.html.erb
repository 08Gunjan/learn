<p id="notice"><%= notice %></p>

<div class="mb-4">
    <nav aria-label="breadcrumb">
      <h1 class="h3">Flash Cards</h1>
    </nav>
</div>

<div class="row">
<div class="col-md-6 col-xl-3 mb-4">
    <% @flash_cards.each do |fc| %>
              <div class="card">
                <header class="card-header">
                  <!-- <h5 class="h3 card-title">Card Title</h5> -->
                  <h6 class="card-subtitle text-muted text-uppercase">From: </h6>
                </header>
                
                <div class="card-body">
                  <p class="card-text"><%= fc.question %></p>
                  <hr/>
                  <p class="card-text"><%= fc.answer %></p>
                  <p><small>Did you recall the answer correctly?</small></p>
                  <a href="#" class="btn btn-block btn-danger">No, I didn't recall it.</a>
                  <a href="#" class="btn btn-block btn-success">Yes, I recalled it.</a>
                </div>
              </div>
              <!-- End Card Header with Image  -->
            </div>
    <% end %>
</div>


<br>

<%= link_to 'New Flash Card', new_flash_card_path %>
