<div class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md">
    <h2 class="text-lg text-gray-700 font-semibold capitalize">Add a new learning plan for <b><%= @topics.first.display_name %></b></h2>
    <%= form_with scope: :item, url: items_path(syllabus: @syllabus), id: 'item_new_form', local: true do |form| %>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mt-4">
            <%= form.hidden_field :item_type_id, value: 'learning_plan' %>

            <div>
              <%= form.label :name, class: "text-gray-700" %><br>
              <%= form.text_field :name, value: "How to learn #{@topics.first.name} - by #{current_user.nickname}", class: "w-full mt-1 px-4 py-2 block rounded bg-gray-200 text-gray-800 border border-gray-300 focus:outline-none focus:bg-white" %>
            </div>

          <div>
            <%= form.label :description, "Add links to items along with comments", class: "text-gray-700" %><br>
            <%= form.text_area :description, required: true, size: "50x20", class: "w-full mt-1 px-4 py-2 block rounded bg-gray-200 text-gray-800 border border-gray-300 focus:outline-none focus:bg-white" %>
          </div>

          <input type="hidden" name="item[topics][]" value="<%= @topics.first.id %>">


        </div>
        <div class="flex justify-end mt-4">
        <%= form.submit "Save", class: "px-4 py-2 bg-gray-800 text-gray-200 rounded hover:bg-gray-700 focus:outline-none focus:bg-gray-700" %>
        </div>
    <% end %>
</div>