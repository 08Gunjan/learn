<%= form_for @review do |form| %>
    <div class="form-group mb-4">
      <%= form.hidden_field :item_id %>
      <%= form.label :status %>
      <%= form.select :status, [['I have heard good things about it','recommending'], ['I have learned from this', 'learned'], ['I am currently going through this','learning'], ['I want to learn from this','want_to_learn']], {required: true}, class: "form-control form-pill" %>
    </div>

    <div>

      <div class="form-group mb-4">
        <span>Overall Score</span>
        <span class="rating">
        <% (1..5).to_a.reverse.each do |score| %>
          <input type="radio" id="overallstar<%= score %>" name="review[overall_score]" value="<%= score %>" <%= "checked" if @review.overall_score == score %> />
          <label for="instar<%= score %>"></label>
        <% end %>
        </span>
      </div>

      <div class="form-group mb-4">
        <span>How inspirational?</span>
        <span class="rating">
        <% (1..5).to_a.reverse.each do |score| %>
          <input type="radio" id="instar<%= score %>" name="review[inspirational_score]" value="<%= score %>" <%= "checked" if @review.inspirational_score == score %> />
          <label for="instar<%= score %>"></label>
        <% end %>
        </span>
      </div>

      <div class="form-group mb-4">
        <span>How educational?</span>
        <span class="rating">
        <% (1..5).to_a.reverse.each do |score| %>
          <input type="radio" id="edstar<%= score %>" name="review[educational_score]" value="<%= score %>" <%= "checked" if @review.educational_score == score %> />
          <label for="edstar<%= score %>"></label>
        <% end %>
        </span>
      </div>

      <div class="form-group mb-4">
        <span>How challenging?</span>
        <span class="rating">
        <% (1..5).to_a.reverse.each do |score| %>
          <input type="radio" id="distar<%= score %>" name="review[challenging_score]" value="<%= score %>" <%= "checked" if @review.challenging_score == score %> />
          <label for="distar<%= score %>"></label>
        <% end %>
        </span>
      </div>

      <div class="form-group mb-4">
        <span>How entertaining?</span>
        <span class="rating">
        <% (1..5).to_a.reverse.each do |score| %>
          <input type="radio" id="enstar<%= score %>" name="review[entertaining_score]" value="<%= score %>" <%= "checked" if @review.entertaining_score == score %> />
          <label for="enstar<%= score %>"></label>
        <% end %>
        </span>
      </div>

      <div class="form-group mb-4">
        <span>How visual?</span>
        <span class="rating">
        <% (1..5).to_a.reverse.each do |score| %>
          <input type="radio" id="vistar<%= score %>" name="review[visual_score]" value="<%= score %>" <%= "checked" if @review.visual_score == score %> />
          <label for="vistar<%= score %>"></label>
        <% end %>
        </span>
      </div>

      <div class="form-group mb-4">
        <span>How interactive?</span>
        <span class="rating">
        <% (1..5).to_a.reverse.each do |score| %>
          <input type="radio" id="actstar<%= score %>" name="review[interactive_score]" value="<%= score %>" <%= "checked" if @review.interactive_score == score %> />
          <label for="actstar<%= score %>"></label>
        <% end %>
        </span>
      </div>
    </div>

    <div class="form-group mb-4">
      <%= form.label :notes, "Comments" %>
      <%= form.text_area :notes, class: "form-control" %>
    </div>

	<div class="form-group mb-4">
		<%= form.submit "Save", class: "btn btn-primary" %>
	</div>
<% end %>