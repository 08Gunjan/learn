<div style="max-width: 600px; max-height: 300px; display: inline-block; margin-right: 1em;">
<div style="display:flex; border: thin solid #eee; border-radius: 5px; margin-bottom: 2em;">
		<div>
			<a href="<%= item_url(review.item) %>" target="_blank" class="itemcover">
				<%if review.item.image_url.present? %>
					<img src="<%= review.item.image_url %>" height="150px"/>
				<% else %>
					<%= image_tag 'cover_holder.png', height: '150px' %>
				<%end%>
				
			</a>
		</div>

		<div style="padding: 8px 12px;">
			<h3 class="itemname"><a href="<%= item_url(review.item) %>" target="_blank"><%= review.item.name %></a></h3>
			<h4 class="itemcreators"><%= review.item.creators %></h4>
			<p class="reviewrating"><%= "⭐" * review.overall_score.to_i %></p>
			<p class="reviewnotes"><%= review.notes.to_s.truncate(150) %></p>
		</div>
</div>
</div>