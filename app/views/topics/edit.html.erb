<div class="row">
<div class="col-md-6 mb-4">
<div class="card">

<header class="card-header">
	<h2 class="h3 card-header-title"><b>Edit Topic: <%= @topic.display_name %></b></h2>
</header>

<div class="card-body">

<ul>
<% @topic.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
</ul>

<%= form_for @topic do |form| %>
  <div class="form-group mb-4">
    <%= form.label :display_name, "Name (use only a-z, 0-9, <space> and -)" %><br>
    <%= form.text_field :display_name, minlength: 4, maxlength: 50, class: "form-control form-pill", pattern: "^[0-9a-z\\-\\/ ]+$", required: true %>
  </div>

  <div class="form-group mb-4">
    	<%= form.submit "Save Topic", class: "btn btn-primary" %>
  </div>
<% end %>
</div>

</div>
</div>
</div>