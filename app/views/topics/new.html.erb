<div class="row">
<div class="col-md-6 mb-4">
<div class="card">

<header class="card-header">
	<h2 class="h3 card-header-title">Add Topic</h2>
</header>

<div class="card-body">
<%= form_for @topic, method: :post do |form| %>
  <div class="form-group mb-4">
    <%= form.label :name, "name" %><br>
    <%= form.text_field :name, minlength: 4, maxlength: 50, class: "form-control form-pill" %>
  </div>

  <div class="form-group mb-4">
    	<%= form.submit "Add Topic", class: "btn btn-primary" %>
  </div>
<% end %>
</div>

</div>
</div>
</div>