<% content_for :title do %>
<%= @topic.display_name %> :: LearnAwesome.org
<% end %>

<% content_for :opengraph do %>
  <link rel="canonical" href="<%= topic_url(@topic) %>" />
  <% if params['item_type'].present? %>
  <meta name="keywords" content="best <%= ItemType.find(params['item_type']).display_name_plural %> for <%= @topic.search_keyword %>">
  <% else %>
  <meta name="keywords" content="best books for <%= @topic.search_keyword %>, best podcasts for <%= @topic.search_keyword %>, best videos for <%= @topic.search_keyword %>, learn <%= @topic.search_keyword %>, how to learn  for <%= @topic.search_keyword %>, learning path for <%= @topic.search_keyword %>">
  <% end %>
  <meta name="description" content="LearnAwesome has collected the best courses, podcasts, books blogs, videos, apps for learning for <%= @topic.search_keyword %>">

  <meta property="og:title" content="<%= @topic.display_name %> :: LearnAwesome.org">
  <meta property="og:description" content="The best courses, podcasts, books blogs, videos, apps for learning <%= @topic.search_keyword %>">
  <meta property="og:image" content="<%= @topic.image_url.html_safe %>">
  <!-- <meta property="og:url" content="https://learnawesome.org/"> -->
  <meta name="twitter:card" content="summary_large_image">

  <%= auto_discovery_link_tag :atom, topic_url(@topic, format: :atom), title: "New learning resources on #{@topic.display_name} as ATOM" %>
  <%= auto_discovery_link_tag :rss, topic_url(@topic, format: :rss), title: "New learning resources on #{@topic.display_name} as RSS" %>
<% end %>

<%= render @topic %>