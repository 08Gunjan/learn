<h1 class="mt-8">FiveStarComponent</h1>
<%= render FiveStarComponent.new(review: Review.find_or_initialize_by(item_id: Item.order(:created_at).first.id, user: current_user)) %>

<h1 class="mt-8">DropDownComponent</h1>
<div class="px-24"><%= render DropDownComponent.new(label: "dropdown", items: []) %></div>

<h1 class="mt-8">SplitButtonComponent</h1>
<div class="px-24"><%= render SplitButtonComponent.new(item: Item.order(:created_at).first, user: current_user, isopen: false) %></div>

<h1 class="mt-8">StarRatingComponent</h1>
<%= render StarRatingComponent.new(value: "3.2", count: 132) %>

<h1 class="mt-8">FlashCardComponent</h1>
<%= render FlashCardComponent.new(fid: FlashCard.first.id) %>

<h1 class="mt-8">ItemPanelComponent</h1>
<div class="bg-white rounded-lg shadow-lg max-w-lg mx-auto">
<%= render ItemPanelComponent.new(item: Item.where(item_type_id: 'book').first, user: current_user) %>
</div>

<h1 class="mt-8">ItemsGridComponent</h1>
<%= render ItemsGridComponent.new(items: Item.all.take(6), user: current_user) %>

<h1 class="mt-8">ActivityPanelComponent</h1>
<%= render ActivityPanelComponent.new(review: Review.find_or_initialize_by(item_id: Item.order(:created_at).first.id, user: current_user), user: current_user) %>

