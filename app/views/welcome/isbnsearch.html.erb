<div class="card max-w-md mx-auto">
	<h2 class="h3 card-header-title"><b>Search by ISBN <% if @isbn.present? %>: <%= @isbn %><% end %></b></h2>

<%= form_with local: true, method: :get, html: {class: "simple-form"} do |form| %>
  <div class="form-group mb-4">
    <%= form.label :q, "ISBN of the book" %><br>
    <%= form.text_field :q, value: @isbn, minlength: 5, maxlength: 30, required: true, pattern: '[0-9 \\-]{10,18}', class: "form-control form-pill" %>
  </div>

  <div class="form-group mb-4">
  		<%= form.submit "Search", class: "btn btn-primary" %>
  </div>
<% end %>

</div>
